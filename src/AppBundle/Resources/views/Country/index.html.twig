{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} - Countries members
{% endblock %}
{% block header %}
    Countries members
{% endblock %}
{% block content %}
    <div class="content col-lg-offset-3 col-lg-6">
        <div class="table-responsive text-center">
            <table class="table table-striped table-hover">
                {% for country in countries %}
                    <tr>
                        <td><a href="{{ path('countryView', { 'countryName': country.name }) }}">{{ country.name }}</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
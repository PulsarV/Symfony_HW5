{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} - {{ players[0].team.name }} national football team players
{% endblock %}
{% block header %}
    {{ players[0].team.name }} national football team players
{% endblock %}
{% block content %}
    <div class="content col-lg-offset-3 col-lg-6">
        <div class="table-responsive text-center">
            <table class="table table-striped table-hover">
                {% for player in players %}
                    <tr>
                        <td><a href="{{ path('playerView', { 'teamName': player.team.name, 'playerName': player.name }) }}">{{ player.name }}</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
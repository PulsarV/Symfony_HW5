{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} - {{ coaches[0].team.name }} national football team coaches
{% endblock %}
{% block header %}
    {{ coaches[0].team.name }} national football team coaches
{% endblock %}
{% block content %}
    <div class="content col-lg-offset-3 col-lg-6">
        <div class="table-responsive text-center">
            <table class="table table-striped table-hover">
                {% for coach in coaches %}
                    <tr>
                        <td><a href="{{ path('coachView', { 'teamName': coach.team.name, 'coachName': coach.name }) }}">{{ coach.name }}</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}